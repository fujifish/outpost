#!/usr/bin/env node

process.title = 'outpost-cli';

var fs = require('fs');
var util = require('util');
var path = require('path');
var http = require('http');
var Outpost = require('../lib/outpost');
var Cache = require('../lib/cache');

/**
 * try to find the outpost configuration file by traveling up the file system
 * and checking every folder
 */
function _findOutpostConfig(dir) {
  // reached the root
  var parent = path.resolve(dir, '..');
  if (parent === dir) {
    return null;
  }

  try {
    var file = path.resolve(dir, 'opconfig.json');
    fs.openSync(file, 'r');
    return file;
  } catch (err) {
    if (err.code === 'ENOENT') {
      return _findOutpostConfig(parent);
    }
    return null;
  }
}

/**
 *  load and parse the outpost configuration
 */
function _outpostConfig(config) {
  config = config || _findOutpostConfig(__dirname);
  if (!config) {
    return null;
  }

  var conf = {};
  try {
    // either given a config as string or file name
    if (config.trim().charAt(0) !== '{') {
      config = fs.readFileSync(path.resolve(path.resolve(__dirname, '..'), config));
    }
    conf = JSON.parse(config);
  } catch (err) {
    console.error('failed to load outpost config: ' + err.message);
    return null;
  }
  return conf;
}

// process command line options to get the command to execute
var command = require('../lib/cli').process();

/**
 * execute a command
 */
function _handleCommand(command, cb) {

  var opconfig = _outpostConfig(command.opConfig);

  // special handling of starting outpost in daemon mode
  if (command.type === 'daemon') {

    function _reportResult(result) {
      if (process.send) {
        process.send(result);
      } else {
        console.log(result);
      }
    }

    process.title = 'outpost-agent';
    if (!opconfig) {
      _reportResult('outpost config not specified');
      process.nextTick(function() { process.exit(1); });
      return;
    }

    // make sure the config has an agent id
    if (!opconfig.id || opconfig.id.length === 0) {
      _reportResult('missing id in outpost config');
      process.nextTick(function() { process.exit(1); });
      return;
    }

    // make sure the config has an agent name
    if (!opconfig.name || opconfig.name.length === 0) {
      _reportResult('missing name in outpost config');
      process.nextTick(function() { process.exit(1); });
      return;
    }

    var outpost = new Outpost(opconfig);
    outpost.start(function(err) {
      // notify the spawner that we're ready
      _reportResult(err || 'agent started');
      if (err) {
        process.nextTick(function() { process.exit(1); });
      }
    });

    outpost.on('close', function() {
      setImmediate(function() {
        cb();
      });
    });

    return;
  }

  // special handling of module commands
  if (command.type === 'module') {
    switch (command.action) {
      case 'pack':
        var cache = new Cache({});
        cache.pack(command, function(err, filename) {
          if (err) {
            cb('module creation failed', err);
          } else {
            cb(null, 'module created at ' + filename);
          }
        });
        break;
    }
    return;
  }

  // special handling of agent commands
  if (command.type === 'agent') {
    switch (command.action) {

      case 'init':
        var defaults = opconfig || {};
        defaults = util._extend(defaults, command.options);
        require('../lib/init-config').initConfig(defaults, function(result) {
          if (result) {
            // save the config
            var output = command.options.output || path.resolve(process.cwd(), 'opconfig.json');
            try {
              fs.writeFileSync(output, JSON.stringify(result, null, 2));
              cb(null, 'outpost configuration saved to ' + output);
            } catch (err) {
              cb('error', 'error writing configuration: ' + err.message);
            }
          }
        });
        return;

      case 'config':
        console.log(JSON.stringify(opconfig, null, 2));
        return;
      case 'restart':
        _handleCommand({type: 'agent', action: 'stop', silent: true}, function(err, message) {
          if (message) {
            console.log(message);
          }
          _handleCommand({type: 'agent', action: 'start'}, function(err, message) {
            cb && cb(err, message);
          });
        });

        return;

      case 'start':

        var args = [__filename, '--daemon'];
        if (command.opConfig) {
          args.push('--opconfig');
          args.push(command.opConfig);
        }
        var child = require('child_process').spawn(process.execPath, args, {
          cwd: path.resolve(__dirname, '..'),
          env: process.env,
          stdio:  ['ignore', 'ignore', 'ignore', 'ipc'],
          detached: true
        });

        child.on('message', function(message) {
          child.disconnect();
          child.unref();
          if (message === 'agent started' || message === 'agent is already running') {
            cb && cb(null, message);
          } else {
            cb && cb('error', message);
          }
        });
        return;

      case 'stop':
        command.silent = true;
        break;
    }
  }

  // all other commands are sent to the agent
  if (!opconfig) {
    cb('error', 'outpost config not specified');
    return;
  }
  delete command.opConfig;
  var postData = JSON.stringify(command);

  var requestOptions = {
    hostname: '127.0.0.1',
    port: (opconfig && opconfig.cliport) || Outpost.prototype.CLIPORT,
    path: '/',
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Content-Length': postData.length
    }
  };

  var req = http.request(requestOptions, function(res) {
    res.on('data', function(data) {
      process.stdout.write(data);
    });
    res.on('end', function() {
      var result = JSON.parse(res.trailers['command-result']);
      cb && cb(result.result === 'error', result.msg);
    });
  });

  req.on('error', function(e) {
    var message;
    var error = 'error';
    if (e.code === 'ECONNREFUSED') {
      error = null;
      message = 'agent not running';
    } else {
      message = 'error communicating with the outpost agent: ' + e.message;
    }
    cb && cb(error, message);
  });

  // write data to request body
  req.write(postData);
  req.end();

}

// start processing the command
_handleCommand(command, function(err, message) {
  if (message) {
    console.log((err ? ('Error: ') : '') + message);
  }

  if (err) {
    process.exit(1);
  }
  process.exit(0);
});

