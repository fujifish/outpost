#!/usr/local/bin/node

var Outpost = require('../lib/outpost');

var outpost = new Outpost({});
outpost.start(function() {
  var command1 = {
    type: 'install',
    url: 'file:///Users/nfischer/capriza/outpost/testModule',
    installParams: []
  };

  var command2 = {
    type: 'configure',
    module: 'testmodule@0.1.0',
    configParams: ['--config', JSON.stringify({a: 1, b: 'hello'})]
  };

  var command3 = {
    type: 'start',
    module: 'testmodule@0.1.0',
    startParams: ['--config', JSON.stringify({port: 8080})]
  };

  outpost.process([command1, command2, command3], function() {
    console.log('DONE!');
  });

});

